<form action="<%= submitPath %>?_csrf=<%= locals.csrfToken %>" method="POST" enctype="multipart/form-data">
  <p>
    <label for="title">Title</label>
    <input type="text" id="title" name="title" value="<%= product.title %>" required>
  </p>

  <div id="image-upload-control">
    <p>
      <label for="image">Image</label>
      <input type="file" id="image" name="image" accept="image/png,image/jpg" <% if (imageRequired) { %>required<% } %>>
    </p>

    <img src="" alt="Selected image.">
  </div>
  
  <input type="text" name="uid" id="uid" value="<%= locals.uid %>" hidden>
  <p>
    <label for="summary">Seller Details</label>
    <input type="text" id="summary" name="summary" value="<%= product.summary %>" required maxlength="250" placeholder="Include Seller Name: and Contact No.:" >
  </p>

  <p>
    <label for="price">Price</label>
    <input type="number" id="price" name="price" value="<%= product.price %>" min="0" step="1" required>
  </p>
<input type="text" id="type" name="type" value="user" hidden>
  <p>
    <label for="description">Description</label>
    <textarea id="description" name="description" rows="7" required><%= product.description %></textarea>
  </p>

  <p>
    <button type="reset" class="btn btn-alt">Reset</button>
    <button class="btn">Save</button>
  </p>
</form>
