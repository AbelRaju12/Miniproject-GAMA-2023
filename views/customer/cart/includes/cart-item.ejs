<article class="cart-item">
  <div class="cart-item-info">
    <h2><%= item.product.title %></h2>
    <p>Rs.<span class="cart-item-price"><%= item.totalPrice.toFixed(2) %></span> <span class="cart-product-price">(Rs.<%= item.product.price.toFixed(2) %>)</span></p>
  </div>

  <form class="cart-item-management" data-productid="<%= item.product.id %>" data-csrf="<%= locals.csrfToken %>">
    <input value="<%= item.quantity %>" type="text" pattern="[0-1]" placeholder="Enter 0 to delete" required>
    <button class="btn btn-alt">Update</button>
  </form>
</article>